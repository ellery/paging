<%- model_class = Receiver -%>
<div class="page-header">
  <h1><%=t '.title', :default => Receiver %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @receiver.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:frequency) %></dt>
      <dd><pre class="prettyprint"><%= @receiver.frequency %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:latitude) %></dt>
      <dd><pre class="prettyprint"><%= @receiver.latitude %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:longitude) %></dt>
      <dd><pre class="prettyprint"><%= @receiver.longitude %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:haat) %></dt>
      <dd><pre class="prettyprint"><%= @receiver.haat %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              receivers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_receiver_path(@receiver), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              receiver_path(@receiver),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

